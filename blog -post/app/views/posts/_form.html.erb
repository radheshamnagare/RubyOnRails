<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
   </button>
  </div>
   
    </div>
  <% end %>

 

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title ,class:"form-control"%>
  </div>

   <div class="field form-group">
    <%= form.label :template %>
    <%= form.file_field :template ,class:"form-control"%>
  </div>

  <div class="field form-group">
    <%= form.label :post %>
    <%= form.rich_text_area :post_body ,class:"overflow-scroll" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id,id: :post_user_id,value:current_user.id ,type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-dark btn-sm" %>
  </div>
<% end %>

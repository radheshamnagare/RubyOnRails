<div class="container">


<h1>Profiles</h1>

<table class="table  table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <% if current_user.id == profile.user_id%>
      <tr>
        
        <td><%= link_to profile.first_name+" "+profile.last_name, profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) ,class:"btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<% if @profiles.where(:user_id => current_user.id).count !=1 %>
<%= link_to 'New Profile', new_profile_path ,class:"btn btn-outline-success btn-sm"%>
<%end%>
</div>
<div class="card">
<div class="card-body">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" ,width:100%>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" ,class:"btn btn-outline-danger btn-sm"%>
  </div>   <ul>


      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
</div>
<br/><br/>
<div class="container">
<%= render "devise/shared/links" %>
</div>